@{
	ViewData["Title"] = "Pokemon";
}

@model List<Pokedex.API.ApiModels.PokemonModel.Pokemon>

<link rel="stylesheet" href="/css/styles.css">
<link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

<div class="main-content-section">
	<div class="container">
		<div class="row">
			<div class="col-md-7 col-sm-6">

				<div class="content-title">
					<h1>List of <span>Pokémon</span> registered in the Pokédex!</h1>
					<br />
					<h3>Gotta catch 'em all!</h3>

					<br />
					<p>Add a Pokémon to your Battle Team or mark them as caught!</p>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="flex-container">
@foreach (var poke in Model){

			<div class="container" style="margin-top:50px; margin-right:50px; width:300px;">
				<div class="row">
					<div class="col-md-3">
						<div class="card-sl">
							<div class="card-image">
								<img src="/assets/pikachu-sprite-test.png" />
							</div>

							<a class="card-action" href="#"><i class='bx bx-heart'></i></a>
							<div class="card-heading">
								@Html.DisplayFor(model => poke.Name)
							</div>
							@*<div class="card-text">
								Test
							</div>
							<div class="card-text">
								Test
							</div>
							<div class="card-text">
								Electric
							</div>*@
							<a href="#" class="card-button">Add to Team</a>
						</div>
					</div>
				</div>
			</div>
			}
</div>