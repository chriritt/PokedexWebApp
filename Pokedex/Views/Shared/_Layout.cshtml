<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/styles.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>

    <nav class="sidebar open">
        <header>
            <div class="image-text">
                <a href="/Home">
                    <span class="image">
                        <img src="/assets/nav-icons/ultra-ball.png" alt="">
                    </span>
                </a>

                <div class="text logo-text">
                    <span class="TrainerName">Welcome!</span>
                    <span class="Title">Pokémon Trainer</span>
                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                @*                <li class="search-box">
                <img class="icon-png" src="/assets/nav-icons/magnifier.png" alt="Search for a Pokemon"/>
                <input type="text" placeholder="Pokémon Name or ID">
                </li>*@

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="/Home">
                            <img class="icon-png" src="/assets/nav-icons/home.png" alt="Home Page" />
                            <span class="text nav-text">Home</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/Home/Pokemon">
                            <img class="icon-png" src="/assets/nav-icons/pikachu.png" />
                            <span class="text nav-text" alt="National Pokédex">Pokémon</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/Home/CaughtChecklist">
                            <img class="icon-png" src="/assets/nav-icons/heart.png" alt="Caught Pokémon" />
                            <span class="text nav-text">Caught Checklist</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/Home/TeamBuilder">
                            <img class="icon-png" src="/assets/nav-icons/star.png" alt="Team Builder" />
                            <span class="text nav-text">Team Builder</span>
                        </a>
                    </li>
                </ul>
            </div>


            <div class="bottom-content">
                <li class="nav-link">
                    <a href="/Home/About">
                        <img class="icon-png" src="/assets/nav-icons/about.png" alt="About this Pokedex" />
                        <span class="text nav-text">About Pokédex</span>
                    </a>
                </li>
            </div>
        </div>

    </nav>

    <section class="home">
        <div class="container">
            @RenderBody()
        </div>
    </section>



    <script>
        const body = document.querySelector('body'),
            sidebar = body.querySelector('nav'),
            toggle = body.querySelector(".toggle"),
            searchBtn = body.querySelector(".search-box"),
            modeSwitch = body.querySelector(".toggle-switch"),
            modeText = body.querySelector(".mode-text");


        toggle.addEventListener("click", () => {
            sidebar.classList.toggle("close");
        })

        searchBtn.addEventListener("click", () => {
            sidebar.classList.remove("close");
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
